<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>HBDPG2.Core</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackageId>HBDPG2.Core</PackageId>
    <Version>1.0.0-beta</Version>
    <FileVersion>1.0.0</FileVersion>
    <Authors>Piotr Kniaz</Authors>
    <Company>HBDPG-2</Company>
    <Product>HBDPG-2</Product>
    <Description>Deterministic password generator</Description>
    <RepositoryUrl>https://github.com/HBDPG-2/hbdpg-2-core</RepositoryUrl>
    <Copyright>Copyright © 2025 Piotr Kniaz</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <PublishRepositoryUrl>true</PublishRepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Konscious.Security.Cryptography.Argon2" Version="1.3.1" />
  </ItemGroup>

</Project>
